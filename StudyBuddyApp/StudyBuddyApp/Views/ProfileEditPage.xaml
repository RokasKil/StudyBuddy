<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="StudyBuddyApp.ProfileEditPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image
                x:Name="ProfilePicture"
                HorizontalOptions="Start"
                Aspect="AspectFit">
                    <Image.Source>
                        <UriImageSource Uri="{Binding ImageLocation}" 
			                    CacheValidity="14" 
			                    CachingEnabled="true"/>
                    </Image.Source>
                </Image>
                <Button
                x:Name="buttonChangeProfilePicture"
                Text="Keisti profilio nuotrauką"
                Clicked="buttonChangeProfilePicture_Clicked"/>
                <Entry
                x:Name="entryFirstName"
                Text="{Binding User.FirstName}"
                Placeholder="Vardas"/>
                <Entry
                x:Name="entryLastName"
                Text="{Binding User.LastName}"
                Placeholder="Pavardė"/>
                <Button
                x:Name="buttonSaveEdit"
                Text="Išsaugoti pakeitimus"
                Clicked="buttonSaveEdit_Clicked" 
                VerticalOptions="End"/>
                <ActivityIndicator x:Name="LoadingIndicator"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>